<form action="/login" method="post" class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
    <!-- Message d'erreur (si prÃ©sent) -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-4 p-3 bg-red-50 text-red-600 rounded-lg text-sm">
            <%= error %>
        </div>
    <% } %>

    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Se connecter</h1>
    <fieldset class="space-y-4">
        <div class="field-container">
            <label for="username" class="label-content block text-sm font-medium text-gray-700 mb-1">
                Nom d'utilisateur
            </label>
            <input type="text" id="username" name="username" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Votre nom d'utilisateur" required>
        </div>
        <div class="field-container">
            <label for="password" class="label-content block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
            <input type="password" id="password" name="password" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Votre mot de passe" required>
        </div>
        <button type="submit" class="subscribe-btn w-full py-2 px-4 bg-primary text-white font-medium rounded-md hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors">Se connecter</button>
    </fieldset>
    <div class="mt-4 text-center text-sm">
        <a href="/register" class="text-primary hover:underline">Pas encore de compte ? S'inscrire</a>
    </div>
</form>

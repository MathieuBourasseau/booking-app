<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Créer votre compte</h1>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="mb-4 p-3 bg-red-50 text-red-600 rounded-md">
      <p class="text-sm"><%= error %></p>
    </div>
  <% } %>

  <form action="/register" method="post" class="space-y-5">
    <fieldset class="space-y-4">
      <div class="field-container">
        <label for="username" class="block text-sm font-medium text-gray-700 mb-1">
          Nom d'utilisateur
        </label>
        <input
          type="text"
          id="username"
          name="username"
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="Choisissez un nom d'utilisateur"
          required
        >
      </div>

      <div class="field-container">
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
          Mot de passe
        </label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          placeholder="Créez un mot de passe sécurisé"
          required
        >
      </div>

      <div class="pt-2">
        <button
          type="submit"
          class="subscribe-btn w-full py-2 px-4 bg-primary text-white font-medium rounded-md hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors"
        >
          S'inscrire
        </button>
      </div>
    </fieldset>
  </form>

  <div class="mt-4 text-center text-sm text-gray-600">
    <p>Vous avez déjà un compte ?
      <a href="/login" class="text-primary hover:underline font-medium">Se connecter</a>
    </p>
  </div>
</div>

<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-2xl font-bold text-white [text-shadow:_0_1px_2px_rgb(0_0_0_/0.8)] mb-6">Mes réservations</h1>

  <% if (bookings && bookings.length) { %>
    <div class="space-y-4">
      <% bookings.forEach((booking) => { %>
        <article class="bg-white p-4 rounded-md shadow-sm">
          <h2 class="text-lg font-medium mb-2">
            <a href="/properties/<%= booking.property.id %>" class="text-primary hover:underline">
              <%= booking.property.name %>
            </a>
          </h2>
          <p class="text-gray-700">
            Réservation du : <strong><%= booking.start_date %></strong> au <strong><%= booking.end_date %></strong>
          </p>
          <p class="text-gray-700">
            Prix : <strong><%= (+booking.property.price_per_night).toFixed(2) %> € / nuit</strong>
          </p>
          <form method="post" action="/bookings/<%= booking.id %>"
                onsubmit="return confirm('Annuler cette réservation ?');" class="mt-3">
            <button type="submit" class="px-3 py-1 text-sm text-white bg-red-500 rounded hover:bg-red-600">
              Annuler
            </button>
          </form>
        </article>
      <% }) %>
    </div>
  <% } else { %>
    <div class="bg-gray-50 p-6 rounded-md">
      <p class="text-center mb-4">Aucune réservation pour le moment.</p>
      <div class="text-center">
        <a href="/properties" class="text-primary hover:underline">Voir les biens disponibles</a>
      </div>
    </div>
  <% } %>
</div>

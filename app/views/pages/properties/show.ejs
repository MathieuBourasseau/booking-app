<% if (property) { %>
  <h1><%= property.name %></h1>
  <p><%= property.description %></p>
  <p><%= (+property.price_per_night).toFixed(2) %> €</p>

  <% if (session && session.user) { %>
    <form method="post" action="/properties/<%= property.id %>/delete" onsubmit="return confirm('Supprimer ce bien ?');">
      <button type="submit">Supprimer</button>
    </form>
  <% } %>

  <p><a href="/properties">← Retour à la liste</a></p>
<% } %>
<section class="max-w-4xl mx-auto p-6">

  <% if (property) { %>

    <div class="bg-white p-6 rounded-md shadow-sm">
      <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= property.name %></h1>

      <div class="mb-6">
        <p class="text-gray-700 whitespace-pre-line"><%= property.description %></p>
      </div>

      <div class="flex items-center justify-between mb-6">
        <p class="text-lg font-medium text-gray-900">
          <%= (+property.price_per_night).toFixed(2) %> € par nuit
        </p>

        <% if (session && session.user) { %>

          <form method="get" action="/bookings/new/<%= property.id %>">
            <button type="submit"
                    class="px-4 py-2 text-sm text-white bg-primary rounded">
              Réserver
            </button>
          </form>

        <% } %>

      </div>

      <div class="mt-4">
        <a href="/properties" class="text-primary hover:underline flex items-center">
          Retour à la liste
        </a>
      </div>
    </div>

  <% } %>

</div>

<form action="/properties/create" method="post" class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
    <% if (typeof error !== 'undefined' && error) { %>
        <p class="mb-4 p-3 bg-red-50 text-red-600 rounded-lg text-sm">Error : <%= error %></p>
    <% } %>
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Ajouter un bien</h1>
    <fieldset class="space-y-4">
        <div class="field-container">
            <label for="name" class="label-content block text-sm font-medium text-gray-700 mb-1">Titre :</label>
            <input type="text" id="name" name="name" placeholder="La Maison des Amis" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
        </div>
        <div class="field-container">
            <label for="description" class="label-content block text-sm font-medium text-gray-700 mb-1">Description : </label>
            <textarea name="description" id="description" placeholder="Description de votre bien" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" rows="4"></textarea>
        </div>
         <div class="field-container">
            <label for="price_per_night" class="label-content block text-sm font-medium text-gray-700 mb-1">Prix par nuit :</label>
            <input type="number" id="price_per_night" name="price_per_night" placeholder="50.00" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
        </div>
        <button class="subscribe-btn w-full py-2 px-4 bg-primary text-white font-medium rounded-md hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors">ajouter</button>
    </fieldset>
</form>
